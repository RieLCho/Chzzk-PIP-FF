{
  "name": "Chzzk-PIP",
  "version": "0.0.5",
  "description": "치지직 PIP, 녹화 활성화",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["https://chzzk.naver.com/*"],
      "js": ["js/content_script.js"]
    }
  ],
  "permissions": ["storage"],
  "icons": {},
  "web_accessible_resources": [
    {
      "resources": ["js/content_script.js", "record.html"],
      "matches": ["https://chzzk.naver.com/*"]
    }
  ]
}
